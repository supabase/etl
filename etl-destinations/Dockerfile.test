# Test runner Docker image for Iceberg integration tests
FROM rust:1.75-slim-bookworm

# Install system dependencies
RUN apt-get update && apt-get install -y \
    pkg-config \
    libssl-dev \
    curl \
    git \
    cmake \
    g++ \
    postgresql-client \
    && rm -rf /var/lib/apt/lists/*

# Install cargo-tarpaulin for coverage (optional)
RUN cargo install cargo-tarpaulin --version 0.27.0

# Set up working directory
WORKDIR /workspace

# Copy workspace files (will be mounted as volume in docker-compose)
# This is just for the build context
COPY . .

# Pre-build dependencies to speed up tests
RUN cargo build --features iceberg,integration-tests --tests --release

# Default command (overridden by docker-compose)
CMD ["cargo", "test", "--features", "iceberg,integration-tests"]